@model List<RoleUserVm>

@{
    var userId = ViewBag.UserId;
}

<div class="my-4">

    <form asp-controller="Administration" asp-action="EditUserRoles" asp-route-userId="@userId" method="post">

        <div class="card">
            <div class="card-header">
                <h3 class="font-weight-light"> Edit user roles </h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <li class="list-group-item">
                            <div class="custom-control custom-switch">

                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />

                                <input class="custom-control-input shadow" asp-for="@Model[i].IsSelected" id="@Model[i].RoleId" />
                                <label class="custom-control-label" for="@Model[i].RoleId"> @Model[i].RoleName </label>

                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary m-1"> Save </button>
                <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@userId" class="btn btn-secondary m-1"> Cancel </a>
            </div>
        </div>

    </form>

</div>