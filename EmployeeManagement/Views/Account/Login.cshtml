@model LoginVm

@{
    ViewBag.Title = "Login";
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<div class="row">
    <div class="col-12 col-sm-11 col-md-10 col-lg-8 mx-auto my-3">

        <h3 class="text-center font-weight-light"> Login </h3>
        <hr />

        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@returnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control shadow-sm" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control shadow-sm" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <div class="custom-checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary shadow"> Login </button>
                <div class="mt-2">
                    <a asp-controller="Account" asp-action="ForgotPassword"> Forgot password? </a>
                </div>
            </div>
        </form>

    </div>
</div>