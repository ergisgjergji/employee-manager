@model RegisterVm

@{ 
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-12 col-sm-11 col-md-10 col-lg-8 mx-auto my-3">

        <h3 class="text-center font-weight-light"> Register </h3>
        <hr/>

        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control shadow-sm" />
                <span asp-validation-for="FullName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control shadow-sm" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control shadow-sm" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control shadow-sm" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary shadow"> Register </button>
            </div>
        </form>

    </div>
</div>