<div class="border rounded p-3 my-4 shadow">
    @if (!String.IsNullOrEmpty(ViewBag.ErrorTitle))
    {
        <h4> @ViewBag.ErrorTitle </h4>
        <h6> @ViewBag.ErrorMessage </h6>
    }
    else
    {
        <h4>
            An error occured while processing your request.
            The support team is notified and we is working to fix it.
        </h4>
        <h6 class="font-weight-light">
            Please contact us on:
            <u class="font-weight-normal">ergisgjergji@gmail.com</u>
        </h6>
    }
</div>